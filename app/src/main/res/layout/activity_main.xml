<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageViewPlayer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="400dp"
        android:onClick="tocar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarVolume"
        app:srcCompat="@drawable/ic_baseline_play_circle_outline_24"
        tools:ignore="VectorDrawableCompat"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/imageViewPause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:onClick="pausar"
        app:layout_constraintEnd_toStartOf="@+id/imageViewStop"
        app:layout_constraintStart_toEndOf="@+id/imageViewPlayer"
        app:layout_constraintTop_toBottomOf="@+id/seekBarVolume"
        app:srcCompat="@drawable/ic_pause"
        tools:ignore="VectorDrawableCompat"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/imageViewStop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:contentDescription="@string/todo"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:onClick="parar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarVolume"
        app:srcCompat="@drawable/ic_baseline_stop_circle_24"
        tools:ignore="VectorDrawableCompat" />

    <SeekBar
        android:id="@+id/seekBarVolume"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>